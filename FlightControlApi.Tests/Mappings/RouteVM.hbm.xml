<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" assembly="FlightControlApi" namespace="FlightControlApi.Models">
  <class name="RouteVM" table="Route" dynamic-update="true" >
    <cache usage="read-write"/>
    <id name="Id" column="Id" type="long">
      <generator class="native" />
    </id>

    <property name="FromId"  />
    <property name="DestinationId" />
 
    <many-to-one name="From" lazy="false"  class="AirportVM" column="FromId" cascade="save-update"/>
    <many-to-one name="Destination" lazy="false"  class="AirportVM" column="DestinationId" cascade="save-update"/>

  </class>
</hibernate-mapping>