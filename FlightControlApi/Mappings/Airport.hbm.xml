<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" assembly="FlightControlApi" namespace="FlightControlApi.Models">
  <class name="Airport" table="Airport" dynamic-update="true" >
    <cache usage="read-write"/>
    <id name="Id" column="Id" type="long">
      <generator class="native" />
    </id>

    <property name="Name"  />
    <property name="Address" />
    <property name="ZipCode" />
    <property name="Location" />
    <property name="CountryId" />
    <set name="Country" inverse="true" cascade="save-update">
      <key column="CountryId"  not-null="true"/>
      <one-to-many class="Country" />
    </set>

  </class>
</hibernate-mapping>